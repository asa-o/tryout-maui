<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tryoiutmaui.pages.OpenAiChat"
             Title="OpenAiChat">
    <VerticalStackLayout Spacing="25" Padding="30">
        <Editor Placeholder="質問内容を入力してください" HeightRequest="100" TextChanged="OnQueryChanged" />

        <!-- 送信ボタン -->
        <Button Text="送信" Clicked="OnSubmitClicked" />

        <!-- リードオンリーの複数行テキストボックス -->
        <Editor x:Name="AnswerTextBox" IsReadOnly="true" Text="" HeightRequest="100" />
    </VerticalStackLayout>

</ContentPage>
    