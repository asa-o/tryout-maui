<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="tryoiutmaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:tryoiutmaui"
    xmlns:pages="clr-namespace:tryoiutmaui.pages"
    Shell.FlyoutBehavior="Disabled"
    Title="tryoiutmaui">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Chat"
        ContentTemplate="{DataTemplate pages:OpenAiChat}"
        Route="OpenAiChat" />

</Shell>
